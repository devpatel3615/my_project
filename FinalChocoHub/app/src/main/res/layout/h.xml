<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >

  <LinearLayout
      android:layout_width="350dp"
      android:layout_height="wrap_content"
      android:layout_marginTop="5dp"
      android:background="@drawable/white"
      android:orientation="vertical"
      android:layout_marginLeft="5dp"
      android:textAlignment="center"
      android:layout_margin="20dp"
      android:gravity="center_horizontal">

    <RelativeLayout
        android:layout_width="350dp"
        android:layout_height="150dp"
        android:layout_marginTop="5dp"
        android:background="@drawable/white"
        android:orientation="vertical"
        android:layout_marginLeft="5dp"
        android:textAlignment="center"
        android:layout_margin="20dp"
        android:gravity="center_horizontal">
      <RelativeLayout
          android:layout_width="match_parent"
          android:layout_marginTop="5dp"
          android:textAlignment="center"
          android:layout_height="190dp"
          android:gravity="center_horizontal">

        <TextView
            android:id="@+id/textcomplain"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/imageView"
            android:layout_marginTop="5dp"
            android:layout_marginLeft="9dp"
            android:textSize="15dp"
            android:text="Complain :-"
            android:textColor="#7c7d7e"
            />

        <TextView
            android:id="@+id/txtcomplain"
            android:layout_width="200dp"
            android:layout_height="25dp"
            android:layout_marginLeft="110dp"
            android:layout_marginTop="4dp"
            android:layout_weight="1"
            android:text="TextView"
            android:textColor="@color/black"
            android:textSize="16dp" />
        <TextView
            android:id="@+id/textcompdate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/textcomplain"
            android:textSize="16dp"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="15dp"
            android:textColor="#7c7d7e"
            android:text="Complain date :-"/>

        <TextView
            android:id="@+id/txtcompdate"
            android:layout_width="200dp"
            android:layout_height="21dp"
            android:layout_below="@+id/txtcomplain"
            android:layout_marginStart="19dp"
            android:layout_marginLeft="150dp"
            android:layout_marginTop="17dp"
            android:layout_toEndOf="@+id/textcompdate"
            android:text="Date"
            android:textColor="@color/black"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/textstatus"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:text="Complain status:-"
            android:layout_below="@+id/textcompdate"
            android:textColor="#7c7d7e"
            android:layout_marginLeft="15dp"
            android:textSize="15dp" />

        <TextView
            android:id="@+id/txtcompstatus"
            android:layout_width="200dp"
            android:layout_height="25dp"
            android:layout_below="@+id/txtcompdate"
            android:layout_marginStart="16dp"
            android:layout_marginLeft="150dp"
            android:layout_marginTop="13dp"
            android:layout_toEndOf="@+id/textstatus"
            android:text="Status"
            android:textColor="@color/black"
            android:textStyle="bold" />
        <TextView
            android:id="@+id/textreply"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="240dp"
            android:layout_marginLeft="20dp"
            android:textColor="@color/design_default_color_primary_dark"
            android:textStyle="bold"
            android:text="COMPLAIN REPLY="/>
        <TextView
            android:id="@+id/txtcompreply"
            android:layout_width="200dp"
            android:layout_height="25dp"
            android:textStyle="bold"
            android:textColor="@color/black"
            android:layout_marginLeft="180dp"
            android:layout_marginTop="240dp"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/compid"
            android:visibility="invisible"/>
      </RelativeLayout>
    </RelativeLayout>
  </LinearLayout>
  <Button
      android:id="@+id/compCancle"
      android:layout_width="220dp"
      android:layout_height="45dp"
      android:background="@drawable/cancel_"
      android:gravity="center"
      android:hint="Complain Cancel"
      android:layout_centerHorizontal="true"
      android:textSize="16dp"
      android:textStyle="bold"
      android:textColorHint="@color/white"
      android:layout_marginTop="185dp"
      />
</RelativeLayout>