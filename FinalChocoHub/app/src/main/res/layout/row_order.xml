<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    >

    <LinearLayout
        android:layout_width="390dp"
        android:layout_height="290dp"
        android:layout_marginTop="5dp"
        android:layout_centerHorizontal="true"
        android:orientation="vertical"
        android:layout_marginLeft="5dp"
        android:textAlignment="center"
        android:layout_margin="10dp"
        android:gravity="center_horizontal">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:layout_centerHorizontal="true"
        android:orientation="vertical"
        android:layout_marginLeft="5dp"
        android:background="@drawable/white"
        android:textAlignment="center"
        android:layout_margin="10dp"
        android:gravity="center_horizontal">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_marginTop="5dp"
            android:textAlignment="center"
            android:layout_centerHorizontal="true"
            android:layout_height="235dp"
            android:gravity="center_horizontal">

            <TextView
                android:id="@+id/orderid"
                android:layout_width="250dp"
                android:layout_height="30dp"
                android:layout_marginStart="150dp"
                android:layout_marginTop="1dp"
                android:shadowColor="@color/black"
                android:text="User Name"
                android:textAlignment="center"
                android:textColor="#2C3E50"
                android:textSize="14dp"
                android:textStyle="bold"
                android:visibility="invisible"
                android:gravity="center_horizontal"
                android:layout_marginLeft="150dp"/>

            <TextView
                android:id="@+id/textcomplain"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/imageView"
                android:layout_marginTop="5dp"
                android:layout_marginLeft="15dp"
                android:textSize="15dp"
                android:text="Customer name :-"
                android:textColor="#7c7d7e"
                />
            <TextView
                android:id="@+id/username"
                android:layout_marginLeft="157dp"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:textSize="15dp"
                android:textStyle="bold"
                android:textColor="@color/black"
                android:layout_marginTop="4dp"
                android:layout_weight="1"
                android:text="TextView"/>
            <TextView
                android:id="@+id/textcompdate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/textcomplain"
                android:textSize="15dp"
                android:layout_marginTop="20dp"
                android:layout_marginLeft="15dp"
                android:textColor="#7c7d7e"
                android:text="Customer phono :-"/>
            <TextView
                android:id="@+id/userphone"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:layout_below="@+id/username"
                android:textStyle="bold"
                android:textSize="15dp"
                android:textColor="@color/black"
                android:layout_marginLeft="157dp"
                android:layout_marginTop="20dp"
                android:text="Date"
                />

            <TextView
                android:id="@+id/textstatus"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:text="Customer email:-"
                android:layout_below="@+id/textcompdate"
                android:textColor="#7c7d7e"
                android:layout_marginLeft="15dp"
                android:textSize="15dp" />

            <TextView
                android:id="@+id/useremail"
                android:layout_width="200dp"
                android:layout_height="50dp"
                android:textStyle="bold"
                android:textColor="@color/black"
                android:layout_below="@+id/userphone"
                android:text="Status"
                android:textSize="15dp"
                android:layout_marginLeft="157dp"
                android:layout_marginTop="20dp"
                />

            <TextView
                android:id="@+id/textstatus1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="40dp"
                android:text="Total amount :-"
                android:layout_below="@+id/textstatus"
                android:textColor="#7c7d7e"
                android:layout_marginLeft="15dp"
                android:textSize="15dp" />

            <TextView
                android:id="@+id/amount"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:textStyle="bold"
                android:textColor="@color/black"
                android:layout_below="@+id/useremail"
                android:text="Status"
                android:textSize="15dp"
                android:layout_marginLeft="157dp"
                android:layout_marginTop="11dp"
                />


            <TextView
                android:id="@+id/textstatus2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:text="Order status:-"
                android:layout_below="@+id/textstatus1"
                android:textColor="#7c7d7e"
                android:layout_marginLeft="15dp"
                android:textSize="15dp" />

            <TextView
                android:id="@+id/status"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:textStyle="bold"
                android:textColor="@color/black"
                android:layout_below="@+id/amount"
                android:text="Status"
                android:textSize="15dp"
                android:layout_marginLeft="157dp"
                android:layout_marginTop="20dp"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/compid"
                android:visibility="invisible"/>
        </RelativeLayout>
    </RelativeLayout>
    </LinearLayout>
    <Button
        android:id="@+id/Viewmore"
        android:layout_width="200dp"
        android:padding="10dp"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="240dp"
        android:textColor="@color/black"
        android:textAlignment="center"
        android:background="@drawable/cancel_"
        android:text="View more order"
        android:shadowColor="@color/black"
        android:textSize="17dp"
        android:textStyle="bold"
        android:gravity="center_horizontal" />
</RelativeLayout>