<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".singup"
    android:background="@drawable/design_back"
    android:padding="40dp"
    >

    <TextView
        android:id="@+id/view1"
        android:layout_marginTop="40dp"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:layout_centerHorizontal="true"
        android:textSize="35dp"
        android:textAlignment="center"
        android:textColor="#505153"
        android:textStyle="bold"
        android:text="Update Profile"
        android:gravity="center_horizontal" />
    <TextView
        android:id="@+id/view"
        android:layout_marginTop="90dp"
        android:layout_centerHorizontal="true"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:textAlignment="center"
        android:textColor="#7c7d7e"
        android:text="Update new Profile"
        android:gravity="center_horizontal" />

    <EditText
        android:id="@+id/upname"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_marginTop="200dp"
        android:drawablePadding="12dp"
        android:paddingStart="12dp"
        android:paddingEnd="12dp"
        android:ems="10"
        android:inputType="textEmailAddress"
        android:textSize="14sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:hint="Enter email"
        app:layout_constraintTop_toTopOf="parent"
        android:paddingLeft="12dp"
        android:background="@drawable/button123"
        android:drawableStart="@drawable/custom_person_icon"
        android:drawableLeft="@drawable/custom_person_icon"/>

    <!--        Location-->

    <EditText

        android:id="@+id/upaddress"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_marginTop="16dp"
        android:ems="10"
        android:hint="Address"
        android:inputType="textPostalAddress"
        android:textSize="14sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.8"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_below="@+id/upname"
        android:drawablePadding="12dp"
        android:paddingStart="12dp"
        android:paddingEnd="12dp"
        android:background="@drawable/button123"
        android:drawableStart="@drawable/custom_location_icon"
        android:drawableLeft="@drawable/custom_location_icon"
        android:paddingLeft="12dp" />

    <!--        Phone-->

    <EditText

        android:id="@+id/upphone"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_marginTop="16dp"
        android:ems="10"
        android:hint="Phone no."
        android:inputType="number"
        android:textSize="14sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.8"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_below="@id/upaddress"
        android:drawablePadding="12dp"
        android:paddingStart="12dp"
        android:paddingEnd="12dp"
        android:background="@drawable/button123"
        android:drawableStart="@drawable/custom_phone_icon"
        android:drawableLeft="@drawable/custom_phone_icon"
        android:paddingLeft="12dp" />

    <!--    User_Email-->

    <EditText

        android:id="@+id/upemail"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_marginTop="16dp"
        android:ems="10"
        android:hint="Email"
        android:inputType="textEmailAddress"
        android:textSize="14sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.8"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_below="@id/upphone"
        android:drawablePadding="12dp"
        android:paddingStart="12dp"
        android:paddingEnd="12dp"
        android:background="@drawable/button123"
        android:drawableStart="@drawable/custom_email_icon"
        android:drawableLeft="@drawable/custom_email_icon"
        android:paddingLeft="12dp" />

    <!--    Password-->

    <EditText
        android:id="@+id/upassword"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_below="@id/upemail"
        android:layout_marginTop="16dp"
        android:background="@drawable/button123"
        android:drawableStart="@drawable/custom_lock_icon"
        android:drawableLeft="@drawable/custom_lock_icon"
        android:drawablePadding="12dp"
        android:ems="10"
        android:hint="Password"
        android:paddingStart="12dp"
        android:paddingLeft="12dp"
        android:paddingEnd="12dp"
        android:textSize="14sp"
        android:visibility="invisible"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.8"
        app:layout_constraintStart_toStartOf="parent"
        tools:visibility="invisible" />



    <Button

        android:id="@+id/btnsave"
        android:layout_marginLeft="50dp"
        android:layout_width="300dp"
        style="@android:style/Widget.Button"
        android:textStyle="bold|normal"
        android:hint="New Submit profile"
        android:layout_centerHorizontal="true"
        android:textColorHint="@color/white"
        android:textColor="@color/white"
        android:layout_marginTop="520dp"
        android:layout_height="50dp"
        android:textSize="24dp"
        android:background="@drawable/cancel_"
        >

    </Button>



</RelativeLayout>

