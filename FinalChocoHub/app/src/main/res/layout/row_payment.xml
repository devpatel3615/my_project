<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="5dp">
    <RelativeLayout
        android:padding="2dp"
        android:background="@drawable/pay_button"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <RelativeLayout
            android:padding="2dp"
            android:background="@drawable/white"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="210dp"
                android:layout_marginTop="40dp"
                android:gravity="center_horizontal"
                android:text="Order no : \t "
                android:textAlignment="center"
                android:textColor="@color/mustard"
                android:textSize="20dp"
                android:textStyle="bold"
                android:visibility="invisible"
                tools:visibility="invisible" />

            <TextView
                android:id="@+id/o_id"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="310dp"
                android:layout_marginTop="40dp"
                android:gravity="center_horizontal"
                android:text="Order no"
                android:textAlignment="center"
                android:textColor="@color/white"
                android:textSize="20dp"
                android:visibility="invisible"
                tools:visibility="invisible" />

            <TableLayout
            android:layout_above="@+id/bottom_btn"
            android:id="@+id/table_layout_addToBeg"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:layout_marginTop="30dp"
            android:gravity="bottom">

                <TableRow
                android:id="@+id/table_row_1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="5dp">


                <TextView
                    android:id="@+id/order_date"
                    android:layout_width="30dp"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/lvAddToBeg"
                    android:text="Order Date"
                    android:textColor="@color/black"
                    android:textSize="14sp" />

                <TextView
                    android:layout_width="10dp"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/lvAddToBeg"
                    android:text=":"
                    android:textAlignment="center"
                    android:gravity="center_horizontal"
                    android:textColor="@color/black"
                    android:textSize="14sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/pdate"
                    android:layout_width="50dp"
                    android:layout_height="30dp"
                    android:layout_marginLeft="7dp"
                    android:hint=""
                    android:textSize="14sp"
                    android:textColor="@color/black"
                    />

                </TableRow>



            <TableRow
                android:id="@+id/table_row_2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="5dp">

                <TextView
                    android:id="@+id/Amount"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/lvAddToBeg"
                    android:text="Amount"
                    android:textColor="@color/black"
                    android:textSize="14sp" />

                <TextView
                    android:layout_width="10dp"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/lvAddToBeg"
                    android:layout_marginLeft="7dp"
                    android:text=":"
                    android:textAlignment="center"
                    android:gravity="center_horizontal"
                    android:textColor="@color/black"
                    android:textSize="14sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/pamount"
                    android:layout_width="200dp"
                    android:layout_height="40dp"
                    android:layout_marginLeft="7dp"
                    android:hint=""
                    android:textColor="@color/black"
                    android:textSize="14sp" />

            </TableRow>
            <TableRow
                android:layout_height="wrap_content"
                android:layout_width="match_parent"
                android:id="@+id/table_row_3"
                android:padding="5dp">

                <TextView
                    android:id="@+id/cgst"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Customer Name"
                    android:textColor="@color/black"
                    android:textSize="14sp" />

                <TextView
                    android:layout_width="10dp"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/lvAddToBeg"
                    android:text=":"
                    android:layout_marginLeft="7dp"
                    android:textAlignment="center"
                    android:gravity="center_horizontal"
                    android:textColor="@color/black"
                    android:textSize="14sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/cname"
                    android:layout_width="200dp"
                    android:layout_height="30dp"
                    android:layout_marginLeft="7dp"
                    android:textColor="@color/black"
                    android:textSize="14sp"
                    android:hint="" />

            </TableRow>


            <TableRow
                android:layout_height="wrap_content"
                android:layout_width="match_parent"
                android:id="@+id/table_row_4"
                android:padding="5dp">

                <TextView
                    android:id="@+id/sgst"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Customer Address"
                    android:textColor="@color/black"
                    android:textSize="14sp" />

                <TextView
                    android:layout_width="10dp"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/lvAddToBeg"
                    android:text=":"
                    android:layout_marginLeft="7dp"
                    android:textAlignment="center"
                    android:gravity="center_horizontal"
                    android:textColor="@color/black"
                    android:textSize="14sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/caddress"
                    android:layout_width="245dp"
                    android:layout_height="100dp"
                    android:layout_marginLeft="7dp"
                    android:hint=""
                    android:textColor="@color/black"
                    android:textSize="14sp" />

            </TableRow>

            <TableRow
                android:layout_height="wrap_content"
                android:layout_width="match_parent"
                android:id="@+id/table_row_5"
                android:padding="5dp">

                <TextView
                    android:id="@+id/tamount"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Customer Phone"
                    android:textColor="@color/black"
                    android:textSize="14sp" />

                <TextView
                    android:layout_width="10dp"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/lvAddToBeg"
                    android:text=":"
                    android:layout_marginLeft="7dp"
                    android:textAlignment="center"
                    android:gravity="center_horizontal"
                    android:textColor="@color/black"
                    android:textSize="14sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/cphone"
                    android:layout_width="200dp"
                    android:layout_height="30dp"
                    android:layout_marginLeft="7dp"
                    android:textSize="14sp"
                    android:textColor="@color/black" />

            </TableRow>
            <TableRow
                android:layout_height="wrap_content"
                android:layout_width="match_parent"
                android:id="@+id/table_row_7"
                android:padding="5dp">

                <TextView
                    android:id="@+id/Payment_type"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="14sp"
                    android:textColor="@color/black"
                    android:text="Payment Type" />

                <TextView
                    android:layout_width="10dp"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/lvAddToBeg"
                    android:text=":"
                    android:layout_marginLeft="7dp"
                    android:textAlignment="center"
                    android:gravity="center_horizontal"
                    android:textColor="@color/black"
                    android:textSize="14sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/ptype"
                    android:layout_width="200dp"
                    android:layout_height="30dp"
                    android:layout_marginLeft="7dp"
                    android:textSize="14sp"
                    android:textColor="@color/black" />

            </TableRow>


            <TableRow
                android:layout_height="wrap_content"
                android:layout_width="match_parent"
                android:id="@+id/table_row_6"
                android:padding="5dp">

                <TextView
                    android:id="@+id/ostate"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Product Name"
                    android:textColor="@color/black"
                    android:textSize="14sp" />
                <TextView
                    android:layout_width="10dp"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/lvAddToBeg"
                    android:text=":"
                    android:layout_marginLeft="7dp"
                    android:textAlignment="center"
                    android:textColor="@color/black"
                    android:textSize="14sp"
                    android:textStyle="bold"
                    android:gravity="center_horizontal" />

                <TextView
                    android:id="@+id/prname"
                    android:layout_width="100dp"
                    android:layout_height="80dp"
                    android:textSize="14sp"
                    android:layout_marginLeft="7dp"
                    android:textColor="@color/black" />

            </TableRow>

        </TableLayout>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/custid"
            android:visibility="invisible"/>

        </RelativeLayout>
    </RelativeLayout>
</RelativeLayout>

