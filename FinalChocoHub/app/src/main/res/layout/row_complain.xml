<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >

    <LinearLayout
        android:layout_width="350dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:background="@drawable/white"
        android:orientation="vertical"
        android:textAlignment="center"
        android:layout_margin="20dp"
        android:gravity="center_horizontal">

    <RelativeLayout
        android:layout_width="350dp"
        android:layout_height="170dp"
        android:layout_marginTop="5dp"
        android:background="@drawable/white"
        android:orientation="vertical"
        android:textAlignment="center"
        android:layout_margin="10dp"
        android:gravity="center_horizontal">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_marginTop="5dp"
            android:textAlignment="center"
            android:layout_height="190dp"
            android:gravity="center_horizontal">

            <TableLayout
                android:id="@+id/table_layout_payment"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_above="@+id/bottom_btn"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="5dp">

                <TableRow
                    android:id="@+id/table_row_1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="5dp">

                    <TextView
                        android:id="@+id/textcomplain"
                        android:layout_width="30dp"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/lvAddToBeg"
                        android:text="Complain"
                        android:textColor="#1E0000"
                        android:textSize="16sp" />

                    <TextView
                        android:layout_width="10dp"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/lvAddToBeg"
                        android:layout_marginLeft="40dp"
                        android:gravity="center_horizontal"
                        android:text="="
                        android:textAlignment="center"
                        android:textColor="#1E0000"
                        android:textSize="16sp" />

                    <TextView
                        android:id="@+id/txtcomplain"
                        android:layout_width="139dp"
                        android:layout_height="38dp"
                        android:layout_marginLeft="7dp"
                        android:hint=""
                        android:textColor="#1E0000"
                        android:textSize="16sp" />

                </TableRow>

                <TableRow
                    android:id="@+id/table_row_2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="5dp">

                    <TextView
                        android:id="@+id/textcompdate"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Complain date"
                        android:textColor="#1E0000"
                        android:textSize="16sp" />

                    <TextView
                        android:layout_width="10dp"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/lvAddToBeg"
                        android:layout_marginLeft="40dp"
                        android:text="="
                        android:textAlignment="center"
                        android:textColor="#1E0000"
                        android:textSize="16sp" />

                    <TextView
                        android:id="@+id/txtcompdate"
                        android:layout_width="200dp"
                        android:layout_height="30dp"
                        android:layout_marginLeft="7dp"
                        android:hint=""
                        android:textColor="#1E0000"
                        android:textSize="16sp" />

                    <Button
                        android:id="@+id/button2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Button" />

                </TableRow>

                <TableRow
                    android:id="@+id/table_row_3"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="5dp">

                    <TextView
                        android:id="@+id/textstatus"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/lvAddToBeg"
                        android:text="Complain status"
                        android:textColor="#1E0000"
                        android:textSize="16sp" />

                    <TextView
                        android:layout_width="10dp"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/lvAddToBeg"
                        android:layout_marginLeft="40dp"
                        android:text="="
                        android:textAlignment="center"
                        android:textColor="#1E0000"
                        android:textSize="16sp" />

                    <TextView
                        android:id="@+id/txtcompstatus"
                        android:layout_width="200dp"
                        android:layout_height="30dp"
                        android:layout_marginLeft="7dp"
                        android:hint=""
                        android:textColor="#1E0000"
                        android:textSize="16sp" />

                </TableRow>

            </TableLayout>
            <TextView
                android:id="@+id/textreply"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="240dp"
                android:layout_marginLeft="20dp"
                android:textColor="@color/design_default_color_primary_dark"
                android:textStyle="bold"
                android:text="COMPLAIN REPLY="/>
            <TextView
                android:id="@+id/txtcompreply"
                android:layout_width="200dp"
                android:layout_height="25dp"
                android:textStyle="bold"
                android:textColor="@color/black"
                android:layout_marginLeft="180dp"
                android:layout_marginTop="240dp"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/compid"
                android:visibility="invisible"/>
        </RelativeLayout>
    </RelativeLayout>
    </LinearLayout>
    <Button
        android:id="@+id/compCancle"
        android:layout_width="220dp"
        android:layout_height="45dp"
        android:background="@drawable/cancel_"
        android:gravity="center"
        android:hint="Complain Cancel"
        android:layout_centerHorizontal="true"
        android:textSize="16dp"
        android:textStyle="bold"
        android:textColorHint="@color/white"
        android:layout_marginTop="185dp"
        />
</RelativeLayout>